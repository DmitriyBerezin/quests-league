extends ../layout

block content
	h1 Edit Form

	form.form-horizontal
		div.form-group
			label(for='txtName').col-sm-2.control-label Наименование
			div.col-sm-7
				input(type='text', id='txtName', placeholder='Наименование').form-control
		div.form-group
			label(for='txtDescr').col-sm-2.control-label Описание
			div.col-sm-7
				textarea(type='text', id='txtDescr', placeholder='Описание', rows='10').form-control
		div.form-group
			label(for='listCompany').col-sm-2.control-label Компания
			div.col-sm-7
				select(id='listCompany').form-control.selectpicker
					option
					option Company1
					option Company2
					option Company3
				div(role='alert').alert.alert-warning Не нашли нужную компанию?
					a(href='#', data-toggle='modal', data-target='#modalCompany') Добавьте ее
		hr

		div.form-group
			label.col-sm-2.control-label Игроков
			div.col-sm-3
				input(type='text', id='txtPlayerFrom', placeholder='от').form-control
			div.col-sm-3
				input(type='text', id='txtPlayerTo', placeholder='до').form-control
		div.form-group
			label(for='listTags').col-sm-2.control-label Тэги
			div.col-sm-7
				select(id='listTags', multiple).form-control.selectpicker
					option
					option Tag1
					option Tag2
					option Tag3
				div(role='alert').alert.alert-warning Не нашли нужный тэг?
					a(href='#', data-toggle='modal', data-target='#modalTags') Добавьте тэг
		div.form-group
			label(for='listLeague').col-sm-2.control-label Лига
			div.col-sm-7
				select(id='listLeague').form-control.selectpicker
					option
					option League1
					option League2
					option League3

		hr

		div.form-group
			label(for='listCity').col-sm-2.control-label Город
			div.col-sm-7
				select(id='listCity').form-control.selectpicker
					option
					option Москва
		div.form-group
			label(for='listStation').col-sm-2.control-label Метро
			div.col-sm-7
				select(id='listStation', multiple, data-live-search='true').form-control.selectpicker
					option
					option Сокол
					option Аэропорт
		div.form-group
			label(for='txtAddress').col-sm-2.control-label Адрес
			div.col-sm-7
				input(type='text', id='txtAddress', placeholder='Адрес').form-control
		div.form-group
			label.col-sm-2.control-label Gps Координаты
			div.col-sm-3
				input(type='text', id='txtLng', placeholder='долгота').form-control
			div.col-sm-3
				input(type='text', id='txtLat', placeholder='широта').form-control
			//- div(role='alert').alert.alert-warning Перейдите нa
			//- 	a(href='http://maps.yandex.ru', target='ymap') карту
			//- 	|, введите адрес, нажмите правой кнопкой и выбирете "Что здесь?"

		hr

		div.form-group.button-group
			button(type='submit').btn.btn-primary.btn-save Сохранить

	//- Quest company editor modal
	div(id='modalCompany', tabIndex='-1', role='dialog').modal.fade
		div(role='document').modal-dialog
			div.modal-content
				div.modal-header
					button(type='button', data-dismiss='modal' aria-label='Close').close
						span(aria-hidden='true') &times;
					h4.modal-title Новая компания
				div.modal-body
					form.form-horizontal
						div.form-group
							label(for='txtCompName').col-sm-4.control-label Наименование
							div.col-sm-6
								input(type='text', id='txtCompName', placeholder='Наименование').form-control
						div.form-group
							label(for='txtCompSite').col-sm-4.control-label Сайт
							div.col-sm-6
								input(type='text', id='txtCompSite', placeholder='Сайт').form-control
				div.modal-footer
					button(type='button').btn.btn-primary Создать

	//- Quest tags modal
	div(id='modalTags', tabIndex='-1', role='dialog').modal.fade
		div(role='document').modal-dialog
			div.modal-content
				div.modal-header
					button(type='button', data-dismiss='modal' aria-label='Close').close
						span(aria-hidden='true') &times;
					h4.modal-title Тэги
				div.modal-body
					form.form-horizontal
						div.form-group
							label(for='txtTag').col-sm-4.control-label Тэг
							div.col-sm-6
								input(type='text', id='txtTag', placeholder='Тэг').form-control
				div.modal-footer
					button(type='button').btn.btn-primary Создать
					button(type='button').btn.btn-success Создать и остаться
